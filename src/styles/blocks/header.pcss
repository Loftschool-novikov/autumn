.header {
    margin: 60px 0 0;
    display:flex;
    justify-content:space-between;
    align-items: center;
}

.logo {
    &:hover {
        color: #ff9a00;
    }
}

.header__menu {
    display: flex;
    justify-content:center;
    flex: 1;
    margin: 0 20px;

    @include tablets {
        display: none;
    }
}

.header__buttons {
    @include phones {
      display: none;
    }

    @include tablets {
        margin-left: auto;
      }
}

.header__burgerMenu {
    margin-left: 90px;
}
